<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="420.0" prefWidth="610.0" xmlns="http://javafx.com/javafx/16"
            fx:controller="de.verbund.pwmanager.gui.PWManagerController">
    <children>
        <GridPane hgap="5.0" layoutY="21.0" prefHeight="401.0" prefWidth="461.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="495.0" minWidth="10.0" prefWidth="444.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="192.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="378.0" minHeight="10.0" prefHeight="364.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="454.0" GridPane.halignment="CENTER"
                      GridPane.hgrow="NEVER" GridPane.valignment="TOP" GridPane.vgrow="NEVER">
                    <children>
                        <TextField fx:id="tfSearchbar" prefHeight="26.0" prefWidth="390.0" promptText="🔎 Search"
                                   HBox.hgrow="NEVER"/>
                        <Button alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity"
                                minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#doSearch"
                                prefHeight="26.0" prefWidth="52.0" text="Search" HBox.hgrow="ALWAYS"/>
                    </children>
                    <padding>
                        <Insets top="1.0"/>
                    </padding>
                </HBox>
                <Accordion fx:id="acAccount" prefHeight="352.0" prefWidth="406.0" GridPane.rowIndex="1">
                    <panes>
                        <TitledPane animated="false" prefHeight="352.0" prefWidth="381.0" text="Beispiel">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="326.0" prefWidth="409.0">
                                    <children>
                                        <TextArea fx:id="taData" layoutX="-1.0" maxHeight="-Infinity"
                                                  maxWidth="-Infinity" prefHeight="85.0" prefWidth="441.0"
                                                  text="Name &#10;Username &#10;Password&#10;Note">
                                            <padding>
                                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                                            </padding>
                                        </TextArea>
                                    </children>
                                </AnchorPane>
                            </content>
                        </TitledPane>
                    </panes>
                </Accordion>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </GridPane>
        <AnchorPane fx:id="acPane" layoutX="445.0" layoutY="385.0" prefHeight="37.0" prefWidth="116.0">
            <children>
                <Button fx:id="bClose" alignment="CENTER" contentDisplay="CENTER" layoutX="104.0" layoutY="6.0"
                        mnemonicParsing="false" onAction="#doCloseApp" prefHeight="25.0" prefWidth="52.0" text="Close"
                        textAlignment="CENTER"/>
                <Button layoutX="46.0" layoutY="6.0" mnemonicParsing="false" onAction="#doSave" prefHeight="25.0"
                        prefWidth="52.0" text="Save"/>
            </children>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </padding>
        </AnchorPane>
        <AnchorPane layoutX="454.0" layoutY="32.0" prefHeight="158.0" prefWidth="154.0">
            <children>
                <Label fx:id="textPassword" layoutX="1.0" layoutY="72.0" prefHeight="17.0" prefWidth="149.0"
                       text="PasswordVis"/>
                <TextField fx:id="tfNewName" layoutX="1.0" layoutY="2.0" promptText="Name"/>
                <TextField fx:id="tfNewUser" layoutX="1.0" layoutY="35.0" promptText="Username"/>
                <Button fx:id="bAdd" layoutX="84.0" layoutY="98.0" mnemonicParsing="false" onAction="#doAddNewData"
                        prefHeight="25.0" prefWidth="65.0" text="Add new"/>
                <PasswordField fx:id="tfNewPassword" layoutX="1.0" layoutY="68.0" prefHeight="25.0" prefWidth="149.0"
                               promptText="Password"/>
                <ToggleButton fx:id="bPWToggleVis" layoutX="50.0" layoutY="98.0" mnemonicParsing="false"
                              onAction="#doTogglePWVis" prefHeight="25.0" prefWidth="29.0" text="👁"/>
                <TextField fx:id="tfNote" layoutX="1.0" layoutY="128.0" promptText="Note"/>
            </children>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </padding>
        </AnchorPane>
        <MenuBar prefHeight="25.0" prefWidth="608.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </children>
</AnchorPane>
